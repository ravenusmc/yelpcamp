<% include ../partials/header %>
<h1>New Comment Form</h1>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add a new comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" class="btn btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Back</a>
    </div>
  </div>
</div>
